{
	"version": "0.2.4",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "repository":{
                "type": "git",
                "url": "https://github.com/Codr-J/Golden-Era.git",
            },
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
        }
    ],
    "keywords":[
        "theme", 
        "dark theme",
        "golden",
        "golden theme",
        "golden era",
        "yellow theme",
    ]
}